notend=True
grade=''
for notend:
  marks=int(input("Enter the marks obtained: "))
  if marks>=90:
    grade="A+"
  elif marks>=80:
    grade="A"
  elif marks>=70:
    grade="B"
  elif marks>=60:
    grade="C"
  elif marks>=50:
    grade="D"
  elif marks<0 or marks>100:
    print("Invalid input")
  else:
    grade="Fail"
  exit=input("Want to exit? Y for yes N for no")
  if exit=="y":
    notend=False
